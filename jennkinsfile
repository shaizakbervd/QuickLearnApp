pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                git 'https://github.com/shaizakbervd/QuickLearnApp.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    bat 'docker build -t quicklearnapp .'
                }
            }
        }
        stage('Create Docker Container') {
            steps {
                script {
                    bat 'docker create --name quicklearnapp-container quicklearnapp'
                }
            }
        }
        stage('Start Docker Container') {
            steps {
                script {
                    bat 'docker start quicklearnapp-container'
                }
            }
        }
        stage('Stop Docker Container') {
            steps {
                script {
                    bat 'docker stop quicklearnapp-container'
                }
            }
        }
    }
    post {
        always {
            script {
                try {
                    bat 'docker rm quicklearnapp-container'
                } catch (Exception e) {
                    echo 'Container does not exist or failed to remove'
                }
            }
        }
    }
}
