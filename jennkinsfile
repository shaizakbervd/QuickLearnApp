pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'quicklearn'
        CONTAINER_NAME = 'dockerapp'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', credentialsId: 'your-credentials-id', url: 'https://github.com/shaizakbervd/QuickLearnApp.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat 'docker build -t ${DOCKER_IMAGE} .'
                }
            }
        }

        stage('Create Docker Container') {
            steps {
                script {
                    bat 'docker create --name ${CONTAINER_NAME} ${DOCKER_IMAGE}'
                }
            }
        }

        stage('Start Docker Container') {
            steps {
                script {
                    bat 'docker start ${CONTAINER_NAME}'
                }
            }
        }

        stage('Stop Docker Container') {
            steps {
                script {
                    bat 'docker stop ${CONTAINER_NAME}'
                }
            }
        }
    }

    post {
        always {
            script {
                bat 'docker rm -f ${CONTAINER_NAME}'
            }
        }
    }
}
